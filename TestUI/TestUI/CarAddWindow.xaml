<Window x:Class="TestUI.CarAdd"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TestUI"
        mc:Ignorable="d"
        Title="CarAdd" Height="200" Width="200">
    <Grid>
        <StackPanel>
            <TextBox x:Name="BrandTextBox" Margin="10"/>
            <TextBox x:Name="ModelTextBox" Margin="10"/>
            <TextBox x:Name="RegistrationNumberTextBox" Margin="10"/>
            <ComboBox x:Name="TypeComboBox" SelectedIndex="0" Margin="10">
                <ComboBoxItem Content="Motocykl" Tag="0"/>
                <ComboBoxItem Content="Osobowe" Tag="1"/>
                <ComboBoxItem Content="Ciężarowe" Tag="2"/>
                <ComboBoxItem Content="Autobus" Tag="3"/>
            </ComboBox>
            <Button Content="Add" Click="AddCar_Click"/>
        </StackPanel>
    </Grid>
</Window>
